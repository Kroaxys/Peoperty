<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Peoperty.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    BackgroundColor="White"
    Title="Peoperty Demo">

    <VerticalStackLayout Padding="10" Spacing="10">

        <Label x:Name="ScoreLabel"
               Text="Poäng: 0"
               FontSize="24"
               TextColor="Black"
               HorizontalOptions="Center" />

        <Grid x:Name="PeopertyGrid"
              RowSpacing="5"
              ColumnSpacing="5">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="40" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- ÄMNESRAD -->
            <Grid Grid.Row="0" Grid.ColumnSpan="6"
                  BackgroundColor="#e0e0e0"
                  Padding="5">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Label Text="Matte" Grid.Column="0" TextColor="Black" FontAttributes="Bold" HorizontalTextAlignment="Center" />
                <Label Text="Svenska" Grid.Column="1" TextColor="Black" FontAttributes="Bold" HorizontalTextAlignment="Center" />
                <Label Text="Engelska" Grid.Column="2" TextColor="Black" FontAttributes="Bold" HorizontalTextAlignment="Center" />
                <Label Text="NO" Grid.Column="3" TextColor="Black" FontAttributes="Bold" HorizontalTextAlignment="Center" />
                <Label Text="SO" Grid.Column="4" TextColor="Black" FontAttributes="Bold" HorizontalTextAlignment="Center" />
                <Label Text="IT" Grid.Column="5" TextColor="Black" FontAttributes="Bold" HorizontalTextAlignment="Center" />

            </Grid>

            <!-- POÄNGKNAPPAR -->
            <!-- 200 -->
            <Button Text="200" Grid.Row="1" Grid.Column="0" Clicked="OnQuestionButtonClicked" />
            <Button Text="200" Grid.Row="1" Grid.Column="1" Clicked="OnQuestionButtonClicked" />
            <Button Text="200" Grid.Row="1" Grid.Column="2" Clicked="OnQuestionButtonClicked" />
            <Button Text="200" Grid.Row="1" Grid.Column="3" Clicked="OnQuestionButtonClicked" />
            <Button Text="200" Grid.Row="1" Grid.Column="4" Clicked="OnQuestionButtonClicked" />
            <Button Text="200" Grid.Row="1" Grid.Column="5" Clicked="OnQuestionButtonClicked" />

            <!-- 400 -->
            <Button Text="400" Grid.Row="2" Grid.Column="0" Clicked="OnQuestionButtonClicked" />
            <Button Text="400" Grid.Row="2" Grid.Column="1" Clicked="OnQuestionButtonClicked" />
            <Button Text="400" Grid.Row="2" Grid.Column="2" Clicked="OnQuestionButtonClicked" />
            <Button Text="400" Grid.Row="2" Grid.Column="3" Clicked="OnQuestionButtonClicked" />
            <Button Text="400" Grid.Row="2" Grid.Column="4" Clicked="OnQuestionButtonClicked" />
            <Button Text="400" Grid.Row="2" Grid.Column="5" Clicked="OnQuestionButtonClicked" />

            <!-- 600 -->
            <Button Text="600" Grid.Row="3" Grid.Column="0" Clicked="OnQuestionButtonClicked" />
            <Button Text="600" Grid.Row="3" Grid.Column="1" Clicked="OnQuestionButtonClicked" />
            <Button Text="600" Grid.Row="3" Grid.Column="2" Clicked="OnQuestionButtonClicked" />
            <Button Text="600" Grid.Row="3" Grid.Column="3" Clicked="OnQuestionButtonClicked" />
            <Button Text="600" Grid.Row="3" Grid.Column="4" Clicked="OnQuestionButtonClicked" />
            <Button Text="600" Grid.Row="3" Grid.Column="5" Clicked="OnQuestionButtonClicked" />

            <!-- 800 -->
            <Button Text="800" Grid.Row="4" Grid.Column="0" Clicked="OnQuestionButtonClicked" />
            <Button Text="800" Grid.Row="4" Grid.Column="1" Clicked="OnQuestionButtonClicked" />
            <Button Text="800" Grid.Row="4" Grid.Column="2" Clicked="OnQuestionButtonClicked" />
            <Button Text="800" Grid.Row="4" Grid.Column="3" Clicked="OnQuestionButtonClicked" />
            <Button Text="800" Grid.Row="4" Grid.Column="4" Clicked="OnQuestionButtonClicked" />
            <Button Text="800" Grid.Row="4" Grid.Column="5" Clicked="OnQuestionButtonClicked" />

            <!-- 1000 -->
            <Button Text="1000" Grid.Row="5" Grid.Column="0" Clicked="OnQuestionButtonClicked" />
            <Button Text="1000" Grid.Row="5" Grid.Column="1" Clicked="OnQuestionButtonClicked" />
            <Button Text="1000" Grid.Row="5" Grid.Column="2" Clicked="OnQuestionButtonClicked" />
            <Button Text="1000" Grid.Row="5" Grid.Column="3" Clicked="OnQuestionButtonClicked" />
            <Button Text="1000" Grid.Row="5" Grid.Column="4" Clicked="OnQuestionButtonClicked" />
            <Button Text="1000" Grid.Row="5" Grid.Column="5" Clicked="OnQuestionButtonClicked" />

        </Grid>

        <!-- BORDER MED FRÅGA + SVAR -->
        <Border Stroke="Gray" StrokeThickness="2" Padding="10" BackgroundColor="White">

            <VerticalStackLayout Spacing="10">

                <Label x:Name="QuestionLabel"
                       Text="Välj en fråga i gridet."
                       FontSize="18"
                       TextColor="Black" />

                <HorizontalStackLayout Spacing="10">

                    <Entry x:Name="AnswerEntry"
                           Placeholder="Skriv ditt svar här"
                           WidthRequest="200"
                           TextColor="Black" />

                    <HorizontalStackLayout x:Name="ResultButtonsLayout"
                                           Spacing="10"
                                           IsVisible="False">
                        <Button Text="Rätt"
                                BackgroundColor="LightGreen"
                                Clicked="OnCorrectClicked" />

                        <Button Text="Fel"
                                BackgroundColor="LightPink"
                                Clicked="OnWrongClicked" />
                    </HorizontalStackLayout>

                </HorizontalStackLayout>

                <Button x:Name="SubmitButton"
                        Text="Svara"
                        WidthRequest="120"
                        Clicked="OnSubmitAnswerClicked" />

            </VerticalStackLayout>

        </Border>

    </VerticalStackLayout>
</ContentPage>
